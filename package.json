{
  "name": "ai-devops-co-pilot",
  "version": "1.0.0",
  "description": "AI-powered DevOps copilot for incident response and remediation",
  "private": true,
  "workspaces": [
    "src/api",
    "src/frontend"
  ],
  "scripts": {
    "install:all": "npm run install:api && npm run install:frontend && npm run install:workers",
    "install:api": "cd src/api && npm install",
    "install:frontend": "cd src/frontend && npm install",
    "install:workers": "cd src/workers && pip install -r requirements.txt",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd src/api && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "start:dev": "concurrently \"npm run start:api:dev\" \"npm run start:frontend:dev\"",
    "start:api:dev": "cd src/api && npm run start:dev",
    "start:frontend:dev": "cd src/frontend && npm run dev",
    "test": "npm run test:api && npm run test:frontend && npm run test:workers",
    "test:api": "cd src/api && npm test",
    "test:frontend": "cd src/frontend && npm test",
    "test:workers": "cd src/workers && python -m pytest",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-devops-co-pilot.git"
  },
  "keywords": [
    "devops",
    "ai",
    "incident-response",
    "monitoring",
    "automation"
  ],
  "author": "AI DevOps Copilot Team",
  "license": "MIT"
}
